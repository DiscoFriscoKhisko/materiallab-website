  "forbidden_terms": {
    "overused_buzzwords": [
      "revolutionary", "disruptive", "game-changing", "paradigm shift",
      "cutting-edge", "state-of-the-art", "next-generation", "breakthrough",
      "groundbreaking", "transformative", "innovative" // overused
    ],
    "generic_tech_language": [
      "seamless", "frictionless", "effortless", "magical", "automagically",
      "plug-and-play", "turnkey", "one-size-fits-all", "silver bullet",
      "end-to-end", "360-degree", "holistic", "ecosystem"
    ],
    "anthropomorphic_ai": [
      "AI thinks", "AI believes", "AI understands", "AI knows", "AI learns",
      "AI decides", "AI chooses", "AI wants", "AI feels", "AI realizes",
      "machine intelligence", "artificial brain", "digital mind", "silicon brain"
    ],
    "replacement_language": [
      "replace humans", "eliminate the need for", "make humans obsolete",
      "automate away", "remove human error", "supersede human capability",
      "outperform humans", "human-level intelligence", "artificial general intelligence"
    ],
    "vague_marketing": [
      "synergy", "leverage", "utilize", "implement", "deploy", "solution",
      "platform", "ecosystem", "paradigm", "framework" // when used vaguely
    ],
    "apologetic_language": [
      "sorry for the inconvenience", "we apologize", "oops", "whoops",
      "unfortunately", "regrettably", "sadly", "I'm afraid"
    ],
    "uncertain_qualifiers": [
      "maybe", "perhaps", "possibly", "might", "could potentially",
      "sort of", "kind of", "pretty much", "basically", "essentially"
    ],
    "exclusionary_language": [
      "obviously", "clearly", "everyone knows", "it's simple", "just do",
      "merely", "only", "easy", "trivial", "straightforward" // when not true
    ]
  },
  "replacement_patterns": {
    "forbidden_to_preferred": {
      "revolutionary": ["significant advancement", "meaningful improvement", "substantial progress"],
      "disruptive": ["transformative", "impactful", "innovative"],
      "game-changing": ["significant", "impactful", "valuable"],
      "seamless": ["intuitive", "smooth", "well-integrated"],
      "AI thinks": ["AI analysis suggests", "The model indicates", "Based on the data"],
      "AI believes": ["AI analysis shows", "The system determined", "Data indicates"],
      "replace humans": ["augment human capabilities", "enhance human work", "support human decisions"],
      "leverage": ["use", "apply", "employ", "utilize strategically"],
      "synergy": ["collaboration", "combined effect", "cooperative advantage"],
      "sorry for the inconvenience": ["We're working to resolve this", "Here's how we can help"],
      "obviously": ["As you can see", "The data shows", "This indicates"],
      "it's simple": ["Here's how it works", "The process involves", "You can accomplish this by"]
    },
    "context_specific_replacements": {
      "error_messages": {
        "something went wrong": "We encountered an issue",
        "error occurred": "This action couldn't be completed",
        "failed": "was unsuccessful",
        "invalid": "doesn't match the expected format"
