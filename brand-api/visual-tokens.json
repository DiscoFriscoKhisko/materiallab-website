  "anti_slop_visual_rules": {
    "forbidden_patterns": {
      "generic_ai_aesthetics": [
        "hexagonal shapes and patterns",
        "abstract swirls and portals",
        "blue-green gradient combinations",
        "circuit board backgrounds",
        "robotic or mechanical imagery",
        "glowing neon effects",
        "matrix-style digital rain",
        "generic 3D geometric renders"
      ],
      "overused_tech_visuals": [
        "stock photos of laptops with code",
        "hands typing on futuristic keyboards", 
        "holographic interface mockups",
        "brain with circuit overlays",
        "network node visualizations",
        "binary code backgrounds",
        "lens flare and light streaks",
        "chrome and glass materials"
      ],
      "composition_cliches": [
        "centered logo with radiating elements",
        "isometric illustrations without purpose",
        "oversaturated color palettes",
        "excessive drop shadows",
        "overuse of transparency effects",
        "competing visual hierarchies",
        "inconsistent spacing systems"
      ]
    },
    "required_elements": {
      "brand_consistency": [
        "Only use approved MaterialLab color tokens",
        "Maintain typography hierarchy rules",
        "Follow spacing and layout grids",
        "Include appropriate white space",
        "Ensure accessibility compliance"
      ],
      "human_centricity": [
        "Include human elements in compositions",
        "Show diverse and inclusive representation",
        "Focus on real-world applications",
        "Avoid intimidating or cold imagery",
        "Emphasize collaboration over automation"
      ],
      "transparency": [
        "Clear visual hierarchy and flow",
        "Obvious interactive elements",
        "Visible system status and feedback",
        "Explainable visual relationships",
        "No hidden or mysterious elements"
      ]
    }
  },
